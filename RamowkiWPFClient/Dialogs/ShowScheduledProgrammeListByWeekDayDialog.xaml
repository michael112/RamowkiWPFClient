<Window x:Class="WPFSample.Controllers.ShowScheduledProgrammeListByWeekDayDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Wybierz dzień tygodnia..."
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize">

    <Grid Name="MainContainer" HorizontalAlignment="Center">
        <Grid.RowDefinitions><RowDefinition /><RowDefinition /></Grid.RowDefinitions>
        <Grid.ColumnDefinitions><ColumnDefinition /></Grid.ColumnDefinitions>

        <Grid Margin="0 0 0 5" Name="WeekDayPickerContainer" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" />
        <Grid Margin="0 5 0 0" Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions><RowDefinition /></Grid.RowDefinitions>
            <Grid.ColumnDefinitions><ColumnDefinition /><ColumnDefinition /></Grid.ColumnDefinitions>

            <Button Margin="0 0 5 0" Grid.Row="0" Grid.Column="0" Content="OK" Click="OKBtnClick" />
            <Button Margin="5 0 0 0" Grid.Row="0" Grid.Column="1" Content="Anuluj" Click="CancelBtnClick" />
        </Grid>
    </Grid>

</Window>
