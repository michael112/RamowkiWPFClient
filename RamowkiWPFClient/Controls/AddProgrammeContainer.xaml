<UserControl x:Class="WPFSample.Controls.AddProgrammeContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFSample.Controls"
             mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions><RowDefinition /><RowDefinition /></Grid.RowDefinitions>
        <Grid.ColumnDefinitions><ColumnDefinition /></Grid.ColumnDefinitions>

        <Grid Margin="0" Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions><RowDefinition /><RowDefinition /></Grid.RowDefinitions>
            <Grid.ColumnDefinitions><ColumnDefinition /><ColumnDefinition /></Grid.ColumnDefinitions>

            <Label Content="Tytuł*:" Grid.Row="0" Grid.Column="0" />
            <TextBox Name="newProgrammeTitleTB" TextWrapping="Wrap" Grid.Row="1" Grid.Column="0" />
            <Label Content="Opis:" Grid.Row="0" Grid.Column="1" />
            <TextBox Name="newProgrammeDescriptionTB" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" />
        </Grid>

    </Grid>

</UserControl>
